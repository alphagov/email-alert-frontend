<%
  id ||= "input-#{SecureRandom.hex(4)}"
  hint_id ||= "hint-#{SecureRandom.hex(4)}"
  value ||= false
  error_message ||= false
  label ||= {}
%>

<%= render "components/label", {
  text: label[:text],
  html_for: id,
  hint_text: error_message,
  hint_text_classes: "app-c-input__label-error",
  hint_id: hint_id,
  bold: error_message ? true : false,
} %>

<input
  class="app-c-input <%= "app-c-input--error" if error_message %>"
  id="<%= id %>"
  name="<%= name %>"
  type="text"

  <% if error_message %>
    aria-describedby="<%= hint_id %>"
  <% end %>

  <% if value %>
    value="<%= value %>"
  <% end %>
>
