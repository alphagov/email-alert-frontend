<%
  id ||= "input-#{SecureRandom.hex(4)}"
  value ||= false
  error_message ||= false
  label ||= {}
%>

<%= render "components/label", {
  text: label[:text],
  html_for: id,
} %>

<% if error_message %>
  <%= error_message %>
<% end %>

<input
  class="app-c-input <%= "app-c-input--error" if error_message %>"
  id="<%= id %>"
  name="<%= name %>"
  type="text"
  <% if value %>
    value="<%= value %>"
  <% end %>
>
